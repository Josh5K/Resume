<!DOCTYPE html>
<html>
  <head>
    <title>Resume</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <% if @person %>
  <body style="background-image: url('<%= @person.background %>');">
  <% else %>
  <body>
  <% end %>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary fixed-top" id="sideNav">
    <a class="navbar-brand" href="#">
      <img class="img-fluid img-profile rounded-circle mx-auto mb-2" src="<%= @person.image %>" alt="">
    </a>
    <div class"information">
      <h4><%= @person.name %></h4>
      <p>
      <%= @person.address %>, <%= @person.city %>
      <br/>
      (<%= @person.phone_number.to_s[0...3] %>) <%= @person.phone_number.to_s[3...6] %>-<%= @person.phone_number.to_s[6...100] %>
      <br/>
      <%= @person.email %>
      </p>
    </div>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav">
      <% @person.links.each do |link| %>
      <li class="nav-item">
        <a class="nav-link" href="<%= link.source %>"><%= link.key %></a>
      </li>
      <% end %>
    </ul>
    </div>
  </nav>
    <%= yield %>
  </body>
</html>
